<?xml version="1.0" encoding="utf-8"?>
<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs">
  <Package Name="EbookTalker"
           Manufacturer="DeXPeriX"
           Version="1.7.0"
           UpgradeCode="{740449EA-3B9B-4C89-A71F-AE164E015F68}"
           Compressed="true"
           InstallerVersion="500"
           Scope="perMachine">

    <MediaTemplate EmbedCab="yes" />

    <StandardDirectory Id="ProgramFiles6432Folder">
      <Directory Name="EbookTalker" Id="INSTALLFOLDER" />
    </StandardDirectory>

    <StandardDirectory Id="ProgramMenuFolder">
      <Directory Name="EbookTalker" Id="ApplicationProgramsFolder" />
    </StandardDirectory>



    <!-- Start Menu Shortcut -->
    <ComponentGroup Id="EbookTalkerComponents">
      <Files Include="..\..\EbookTalker-Win64\**" />

      <Component Id="ApplicationShortcut" Directory="ApplicationProgramsFolder">
        <Shortcut Name="EbookTalker"
                  Target="[#EbookTalker.exe]"
                  WorkingDirectory="INSTALLFOLDER" />
        <RemoveFolder Id="RemoveApplicationProgramsFolder" On="uninstall" />
        <RegistryValue Root="HKCU"
                      Key="Software\DeXPeriX\EbookTalker"
                      Name="Installed"
                      Value="1"
                      Type="integer"
                      KeyPath="yes" />
      </Component>
    </ComponentGroup>
    

    <Feature Id="App">
      <ComponentGroupRef Id="EbookTalkerComponents" />
    </Feature>
  </Package>
</Wix>
